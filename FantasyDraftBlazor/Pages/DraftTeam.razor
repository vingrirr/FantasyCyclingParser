@using FantasyCyclingParser;

<div class="rider-status @animateClass">
    <h3>@Team.Model.PDCTeamName</h3>
    <h3><MatButton Unelevated="true" @onclick="SaveChanges">Save Changes</MatButton> | <MatButton Unelevated="true" @onclick="RemoveRider">Override<i class="oi oi-bolt " /> </MatButton></h3>

    <ul class="dropzone @dropClass"
        ondragover="event.preventDefault();"
        ondragstart="event.dataTransfer.setData('', event.target.id);"
        @ondrop="HandleDrop"
        @ondragenter="HandleDragEnter"
        @ondragleave="HandleDragLeave">
    </ul>

    <hr />

    @if (Team.RiderToDraft != null)
    {
        <table id="myTable" class="table table-striped">
            <thead>
            <tr>
                <th>Name</th>
                <th>Price</th> 
                <th>Remove</th>
            </tr>
        </thead>
        <tbody>
            
                <tr>
                    <td>@Team.RiderToDraft.Name </td>
                    <td>@Team.RiderToDraft.CurrentYearCost</td>
                    <td><MatButton Unelevated="true" @onclick="RemoveRider" ><i class="oi oi-action-undo " /> </MatButton> </td>
                </tr>
            

        </tbody>
    </table>
    }

    <h3>Current Riders </h3>
      <table id="currentTable" class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th> 
                
                
            </tr>
        </thead>
        <tbody>
            @foreach(Rider r in Team.Model.Riders)
            {
                <tr>
                    <td>@r.Name </td>
                    <td>@r.CurrentYearCost</td>
                    
                </tr>
            }

        </tbody>
    </table>

</div>